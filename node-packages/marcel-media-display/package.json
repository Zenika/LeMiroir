{
  "name": "marcel-media-display",
  "svelte": "src/marcel-media-display.svelte",
  "module": "dist/marcel-media-display.mjs",
  "main": "dist/marcel-media-display.js",
  "scripts": {
    "start": "live-server -q --open=src --cors --mount=/src/config:marcel-config.json --proxy=/api/:http://localhost:8090/api/ & yarn build -w",
    "build": "rollup -c",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "live-server": "^1.2.1",
    "rollup": "^1.11.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.0.0",
    "svelte": "^3.0.0"
  },
  "files": [
    "src",
    "dist/marcel-media-display.js",
    "dist/marcel-media-display.mjs"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "2019"
    },
    "rules": {
      "require-atomic-updates": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "lodash": "^4.17.15",
    "svelma": "^0.3.0"
  }
}
